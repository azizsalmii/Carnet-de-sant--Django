# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
DJANGO_SETTINGS_MODULE=projetPython.settings

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1

# Database Configuration
# Render will auto-set DATABASE_URL - leave empty locally to use SQLite
DATABASE_URL=

# Optional: Auto-create superuser on first deploy
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=ChangeThisSecurePassword123!

# Python Version (for Render)
PYTHON_VERSION=3.11.0

# Gunicorn Workers
WEB_CONCURRENCY=4
